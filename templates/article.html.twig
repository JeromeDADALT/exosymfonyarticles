<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Article</title>
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
</head>

<body>

    <header>
        <div>
            <img id="logo" src="{{ asset('img/logo.jpeg') }}" alt="logo">
        </div>
        <nav>
            <ul>
                <li>
                    <a href="{{ path('home') }}">Accueil</a>
                </li>
                <li>
                    <a href="">Menu 2</a>
                </li>
                <li>
                    <a href="">Menu 3</a>
                </li>
            </ul>
        </nav>
    </header>

    <main>
        <article>
        {% if detailArticle.published %}
            <div>
                <div>
                    <img src="{{ detailArticle.image }}" alt="image">
                </div>
                <h2>{{ detailArticle.title }}</h2>
                <p>{{ detailArticle.content }}</p>
            </div>
            {% else %}
                <p>L'article demandé n'est pas publié.</p>

            {% endif %}
        </article>
    </main>

    <footer>
        <div>
            <ul>
                <li>
                    <a href="{{ path('home') }}">Accueil</a>
                </li>
                <li>
                    <a href="">Menu 2</a>
                </li>
                <li>
                    <a href="">Menu 3</a>
                </li>
            </ul>
        </div>
    </footer>

</body>

</html>